<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hunter.master.foxhunter">


    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".UserInterface"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="User Interface" />
        <activity
            android:name=".Communication"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Communication" />
        <activity
            android:name="com.hunter.game.FoxHunter"

            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="FoxHunter"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hunter.game.HuntGame"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="测向机"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hunter.game.RoomSetting"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_room_setting"
            android:theme="@style/FullscreenTheme"/>
        <activity
            android:name="com.hunter.game.EnterRoom"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_enter_room"
            android:theme="@style/FullscreenTheme"/>
        <activity
            android:name="com.hunter.game.WaitRoom"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_wait_room"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>